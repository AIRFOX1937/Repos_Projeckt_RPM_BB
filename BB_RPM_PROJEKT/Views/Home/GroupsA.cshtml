@{
    ViewData["Title"] = "Группы";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}
@model List<BBLib.Models.Group>
<div class="container" style="margin-top: 40px">
    <h1 style="margin-left: auto; margin-right: auto; margin-bottom: 30px;">
        Группы
    </h1>
    <a asp-action="AddGroup" class="btn btn-primary" style="margin-bottom: 20px; width: 200px; font-size: 18px; color: white">Добавить группу</a>
    <table class="table table-hover" style="font-size:18px">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Номер</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.IdG
                    </td>
                    <td>
                        @user.NumG
                    </td>
                    <td>
                        <a href="@Url.Action("EditGroup", new { id = user.IdG })" style="margin-top: 20px">Изменить</a>
                    </td>
                    <td>
                        <form asp-action="DeleteG" asp-route-id="@user.IdG" method="post">
                            <input type="submit" value="Удалить" style="border-color:transparent; background-color:transparent" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>