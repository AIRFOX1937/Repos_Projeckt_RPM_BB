@{
    ViewData["Title"] = "Новости";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}
@model List<BBLib.Models.News>
<div class="container" style="margin-top: 40px">
    <h1 style="margin-left: auto; margin-right: auto; margin-bottom: 30px;">
        Новости
    </h1>
    <a asp-action="AddNews" class="btn btn-primary" style="margin-bottom: 20px; width: 200px; font-size: 18px; color: white">Добавить новость</a>
    <table class="table table-hover" style="font-size:18px" width="300">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Фото</th>
                <th scope="col">Дата</th>
                <th scope="col">Заголовок</th>
                <th scope="col">Краткий текст</th>
                <th scope="col">Полный текст</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.Id
                    </td>
                    <td>
                        <img src="@user.Img" height="200"/>
                    </td>
                    <td>
                        @user.DateN.ToString("dd/MM/yyyy")
                    </td>
                    <td>
                        @user.Zag
                    </td>
                    <td>
                        @user.Txt
                    </td>
                    <td>
                        @user.Txt1
                    </td>
                    <td>
                        <a href="@Url.Action("EditNews", new { id = user.Id })" style="margin-top: 20px">Изменить</a>
                    </td>
                    <td>
                        <form asp-action="DeleteN" asp-route-id="@user.Id" method="post">
                            <input type="submit" value="Удалить" style="border-color:transparent; background-color:transparent"/>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>