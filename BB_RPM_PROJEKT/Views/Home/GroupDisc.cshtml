@{
    ViewData["Title"] = "Группы и Дисциплины";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}
@model List<BBLib.Models.GrDi>
<div class="container" style="margin-top: 40px">
    <h1 style="margin-left: auto; margin-right: auto; margin-bottom: 30px;">
        Группы и Дисциплины
    </h1>
    <a asp-action="AddGD" class="btn btn-primary" style="margin-bottom: 20px; width: 200px; font-size: 18px; color: white">Добавить</a>
    <table class="table table-hover" style="font-size:18px">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Номер группы</th>
                <th scope="col">Название дисциплины</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.IdGD
                    </td>
                    <td>
                        @user.NumG
                    </td>
                    <td>
                        @user.NameD
                    </td>
                    <td>
                        <a href="@Url.Action("EditGD", new { id = user.IdGD })" style="margin-top: 20px">Изменить</a>
                    </td>
                    <td>
                        <form asp-action="DeleteGD" asp-route-id="@user.IdGD" method="post">
                            <input type="submit" value="Удалить" style="border-color:transparent; background-color:transparent" />
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>