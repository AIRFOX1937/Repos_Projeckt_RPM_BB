@{
    ViewData["Title"] = "Дисциплины";
    Layout = "~/Views/Shared/_LayoutA.cshtml";
}

@model BBLib.Models.Disc

<form asp-action="SaveD" method="post" style="margin-top: 100px">
    <div class="form-group" style="visibility: hidden">
        <label asp-for="IdD" style="font-size:20px">Id:</label>
        <input asp-for="IdD" style="font-size:20px" name="id" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NameD" style="font-size:20px">Название дисциплины:</label>
        <input asp-for="NameD" style="font-size:20px" name="na" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 20px; width: 200px; font-size: 18px">Обновить</button>
</form>