@{
    ViewData["Title"] = "Дисциплины";
    Layout = "~/Views/Shared/_LayoutT.cshtml";
}

<div class="container" style="margin-top: 40px">
    <h1 style="margin-left: auto; margin-right: auto; margin-bottom: 30px;">
        @ViewBag.D: @ViewBag.V
    </h1>
   @model List<BBLib.Models.Doki1>
    <a asp-action="AddDok" class="btn btn-primary" style="margin-bottom: 20px; width: 200px; font-size: 18px; color: white">Добавить материал</a>
    <table class="table table-hover" style="font-size:18px" width="300">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Название</th>
                <th scope="col">Ссылка</th>
                <th scope="col">Отчёт</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @user.IdDo
                    </td>
                    <td>
                        @user.NameDo
                    </td>
                    <td>
                        @user.SsilkaD
                    </td>
                    <td>
                        @if(user.FlagD == 1)
                        {
                            <p>Отчёт</p>
                        }
                        else
                        {
                            <p></p>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("EditDok", new { id = user.IdDo })" style="margin-top: 20px">Изменить</a>
                    </td>
                    <td>
                        <form asp-action="DeleteDo" asp-route-id="@user.IdDo" method="post">
                            <input type="submit" value="Удалить" style="border-color:transparent; background-color:transparent" />
                        </form>
                    </td>
                    <td>
                        <a href="@Url.Action("OtchetiT", new { id = user.IdDo })" style="margin-top: 20px">Отчёты</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>